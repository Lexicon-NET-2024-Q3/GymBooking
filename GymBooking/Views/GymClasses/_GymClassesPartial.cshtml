@model IndexGymClassViewModel
<tr>
    <td>
        @Html.DisplayFor(modelItem => Model.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.StartTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.Duration)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.Description)
    </td>
    <td>
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-action="BookingToggle" asp-route-id="@Model.Id" class="btn @(Model.Attending ? "btn-danger" :
                 "btn-success")">
                @(Model.Attending ? "Cancel" : "Book")
            </a> <span>|</span>
            <a asp-action="Details" asp-route-id="@Model.Id">Details</a>
            @if (User.IsInRole("Admin"))
            {
                <span>|</span>
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> <span>|</span>
                <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a>

            }
        }
    </td>
</tr>